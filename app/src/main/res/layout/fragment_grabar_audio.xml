<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.GrabarAudio.GrabarAudioFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:gravity="center"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/F_GrabarA_TextView_RecordImage"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_margin="20dp"
            android:background="@drawable/ic_volumen_512"
            android:backgroundTint="@color/dark_gray"/>
        <TextView
            android:id="@+id/F_GrabarA_TextView_Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="@string/GabrarAudio_nombre"
            android:textSize="18sp"
            android:lineHeight="32dp"
            android:textAlignment="center" />

        <Chronometer
            android:id="@+id/F_GrabarA_Chronometer_Recordtimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_margin="20dp"
            android:textSize="64sp"/>


        <LinearLayout
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:background="@drawable/shape_empaty_microfono"
            android:gravity="center">
            <ImageButton
                android:id="@+id/F_GrabarA_Button_Recordbtn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/shape_microfono"
                android:src="@drawable/ic_mic_64"/>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>