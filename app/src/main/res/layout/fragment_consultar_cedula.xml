<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.Fragment.ConsultarCedula.ConsultarCedulaFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:gravity="top">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/F_ConsultarC_EditText_Cedula"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="CEDULA"
                android:text="0953679958"
                ></EditText>
            <Button
                android:id="@+id/F_ConsultarC_Button_Buscar"
                android:layout_width="wrap_content"
                android:layout_height="39dp"
                android:text="Buscar"
                android:layout_margin="10dp"/>

        </LinearLayout>

        <TextView
            android:id="@+id/F_ConsultarC_TextView_Contador"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="20sp"
            android:text="Numero de Incidencia: "/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/F_ConsultarC_RecyclerV_Hinci"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:listitem="@layout/item_historialinsidencia"/>

    </LinearLayout>

</FrameLayout>